---
import { Image } from "astro:assets";
import { Icon } from "astro-icon";

import womanCoder from "~/assets/coder-woman.svg";
import ContentSection from "~/components/content-section.astro";

import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<ContentSection title={t("community.title")} id="the-community">
  <Fragment slot="lead" set:html={t("community.main")} />
  <Image
    class="h-80 w-80"
    src={womanCoder}
    loading="eager"
    alt="A Woman frontend developer working on a laptop"
  />
  <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
    <a
      href="https://forms.gle/PpLonriTkdQaFoc79"
      target="_blank"
      class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4"
    >
      <Icon pack="mdi" name="chat" class="h-8" />
      <span>{t("community.give-talk")}</span>
    </a>
    <a
      href="https://www.instagram.com/frontend.opo/"
      target="_blank"
      class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4"
    >
      <Icon pack="mdi" name="instagram" class="h-8" />
      <span>{t("community.follow")}</span>
    </a>
  </div>
</ContentSection>
